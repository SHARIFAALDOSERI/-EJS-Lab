        <p>Rating: <%= '*'.repeat(item.rating) %></p>
        <p>Details: <%= item.details %></p>
      </li>
    <% }); %>
  </ul>

  <h2>Sides</h2>
  <ul>
    <% menuItems.filter(item => item.category === 'sides').forEach(item => { %>
      <li>
        <h3><%= item.name %></h3>
        <p>Price: $<%= item.price.toFixed(2) %></p>
        <p>Rating: <%= '*'.repeat(item.rating) %></p>
        <p>Details: <%= item.details %></p>
      </li>
    <% }); %>
  </ul>
</body>
</html>