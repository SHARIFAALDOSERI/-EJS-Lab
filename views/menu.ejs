<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <h1>Full Menu</h1>

  <h2>Mains</h2>
  <ul>
    <% menuItems.filter(item => item.category === 'mains').forEach(item => { %>
      <li>
        <h3><%= item.name %></h3>
        <p>Price: $<%= item.price.toFixed(2) %></p>
        <p>Rating: <%= '*'.repeat(item.rating) %></p>
        <p>Details: <%= item.details %></p>
      </li>
    <% }); %>
  </ul>

  <h2>Desserts</h2>
  <ul>
    <% menuItems.filter(item => item.category === 'desserts').forEach(item => { %>
